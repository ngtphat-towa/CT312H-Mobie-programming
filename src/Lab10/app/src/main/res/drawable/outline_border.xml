<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/design_default_color_background" />  <corners android:radius="4dp" />
            <stroke android:color="@color/material_on_surface_stroke" android:width="1dp"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_selected="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/material_on_background_disabled" />  <corners android:radius="8dp" />
            <stroke android:color="@color/design_default_color_primary" android:width="1dp"/>
        </shape>
    </item>
</selector>
